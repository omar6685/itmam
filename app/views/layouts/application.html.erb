<!DOCTYPE html>
<html>
  <head>
    <title>Itmam</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_include_tag "itmam" %>
    <%= stylesheet_link_tag 'styles', media: 'screen' %>

    <script>
      document.addEventListener("turbo:load", function() {
        var body = document.querySelector("body");
        if (body && body.dataset.page === "inspections-new") {
          body.classList.add("bg-im-2");
        } else {
          body.classList.remove("bg-im-2");
          body.classList.add("bg-im")
        }
      });
    </script>
  </head>

  <body data-page="<%= controller_name.dasherize %>-<%= action_name.dasherize %>">
    <%= yield %>
  </body>
</html>
