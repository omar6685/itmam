<%= semantic_form_for @nitak_table do |f| %>
  <%= f.inputs do %>
    <%= f.input :activity_table, as: :select, collection: ActivityTable.pluck(:activity, :id), include_blank: true  %>
    <%= f.input :company_status, as: :select, collection: CompanyStatus.pluck(:status, :id), include_blank: true  %>
    <%= f.input :fixed_value %>
    <%= f.input :yearly_value %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
